<%- include('../includes/head.ejs') %>

<link rel="stylesheet" href="/css/admin/admin-frontpage.css">
</head>

<body>
  <%- include('../includes/header.ejs') %>
  <main>
    <%- include('../includes/backButton.ejs') %>
    <h2>Manage Front Page</h2>
    <section class="edit-frontpage frontpage-picks">
      <h3>Current "Doug's Picks"</h3>
      <ul>
        <% suggestedBooks.forEach(book => { %>
        <li>
          <img src="<%= book.imageURL %>" alt="book.title">
        </li>
        <% }) %>
      </ul>
      <a href="/admin/frontpage/edit_picks">Choose Featured Books</a>
    </section>

    <section class="edit-frontpage frontpage-author">
      <h3>
        Current Featured Author
      </h3>
      <figure class="featured-author-figure">
        <img src="<%= featuredAuthor.imageURL %>">
        <figcaption><%= featuredAuthor.firstname + " " + featuredAuthor.lastname %></figcaption>
      </figure>
      <a href="/admin/frontpage/edit_author">Choose Different Featured Author</a>
    </section>
  </main>
</body>

</html>
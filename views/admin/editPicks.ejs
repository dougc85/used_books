<%- include('../includes/head.ejs') %>

<link rel="stylesheet" href="/css/admin/admin-edit-picks.css">
</head>

<body>
  <%- include('../includes/header.ejs') %>
  <main>
    <%- include('../includes/backButton.ejs') %>
    <h2>
      Choose Featured Books
      <span class="<%= emphasizeFour ? 'emphasize-four' : null %>">Select 4</span>
    </h2>
    <form action="/admin/frontpage/edit_picks" method="POST">
      <% books.forEach((book, index) => { %>
      <div class="featured-book-option">
        <input type="checkbox" id="<%= book.title + '-featured-book' %>" name="<%= 'featured-book-' + index %>" value="<%= book._id %>" <%-
          (oldPicks.some(oldPick => {
            return oldPick.equals(book._id);
          })) ? 'checked' : null;
          %>>
        <label for="<%= book.title + '-featured-book' %>">
          <img src="<%= book.imageURL %>" alt="<%= book.title %>">
          <span>
            <%= book.title %>
          </span>
        </label>
      </div>
      <% }) %>
      <button>Submit</button>
    </form>
  </main>
  <footer>

  </footer>
</body>

</html>
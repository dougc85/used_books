<%- include('../includes/head.ejs') %>

<link rel="stylesheet" href="/css/admin/admin-book-catalogue.css">
</head>

<body>
  <%- include('../includes/header.ejs') %>
  <main>
    <%- include('../includes/backButton.ejs') %>
    <h2>Manage Books</h2>
    <section class="book-instructions">
      <h3>Add Book To Catalog</h3>
      <p>
        Before adding a book, look through the list below to see if the book is already in the database.
      </p>
      <a href="/admin/book_catalogue/add">Add</a>
    </section>

    <section class="book-list">
      <h3>
        List of Books <span>(Click book name to edit)</span>
      </h3>
      <ul>
        <% for (book of books) {%>
        <li>
          <a href="/admin/book_catalogue/<%= book._id%>">
            <%= book.title %>
          </a>
        </li>
        <% } %>
      </ul>
    </section>

  </main>
  <footer>

  </footer>
</body>

</html>
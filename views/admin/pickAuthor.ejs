<%- include('../includes/head.ejs') %>

<link rel="stylesheet" href="/css/admin/admin-pick-author.css">
</head>

<body>
  <%- include('../includes/header.ejs') %>
  <main>
    <%- include('../includes/backButton.ejs') %>
    <h2>
      Choose Featured Author
    </h2>
    <form action="/admin/frontpage/edit_author" method="POST">
      <% authors.forEach((author, index) => { %>
      <div class="featured-author-option">
        <input type="radio" id="<%= author.lastname + index %>" name="featuredAuthor" value="<%= author._id %>" <%-
          oldAuthor.equals(author._id) ? 'checked' : null;
          %>>
        <label for="<%= author.lastname + index %>">
          <%= author.firstname + " " + author.lastname + " " + author.birthyear + " - " + (author.deathyear ? author.deathyear : 'present') %>
        </label>
      </div>
      <% }) %>
      <button>Submit</button>
    </form>
  </main>
  <footer>

  </footer>
</body>

</html>
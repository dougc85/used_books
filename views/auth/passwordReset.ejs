<body>
  <%- include('../includes/header.ejs') %>

  <main>
    <h2>Password Reset</h2>
    <p class="reset-message <%= type === 'error' ? 'reset-error' : 'reset-success'%> <%= message ? null : 'hidden' %>">
      <%= message %>
    </p>
    <form method="POST" action="/auth/passwordreset">
      <label for="reset-email">Enter email to reset password: </label>
      <input id="reset-email" type="email" name="email">
      <button>Submit</button>
    </form>
  </main>
  <footer>

  </footer>
</body>

</html>
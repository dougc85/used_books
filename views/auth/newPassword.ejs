<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/includes/shop-header.css">
<link rel="stylesheet" href="/css/auth/new-password.css">

</head>

<body>
  <%- include('../includes/header.ejs') %>

  <main>
    <h2>Create New Password</h2>
    <p class="error-message <%= message ? null : 'hidden' %>">
      <%= message %>
    </p>
    <form method="POST" action="/auth/newpassword/<%= token %>">
      <label for="reset-password1">Please enter a new password:</label>
      <input id="reset-password1" type="password" name="password1" required>
      <label for="reset-password2">Re-enter your new password to confirm:</label>
      <input id="reset-password2" type="password" name="password2" required>
      <button>Submit</button>
    </form>
  </main>
  <footer>

  </footer>
</body>

</html>
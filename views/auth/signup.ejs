<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/includes/shop-header.css">
<link rel="stylesheet" href="/css/auth/signup.css">

</head>

<body>
  <%- include('../includes/header.ejs') %>

  <main>
    <h2>Sign Up</h2>
    <p class="signup-error <%= errorMessage ? null : 'hidden' %>">
      <%= errorMessage %>
    </p>
    <form method="POST" action="/auth/signup">
      <label for="signup-email">Email: </label>
      <input id="signup-email" type="email" name="username">
      <label for="signup-password">Password: </label>
      <input id="signup-password" type="password" name="password">
      <button>Submit</button>
    </form>

  </main>
  <footer>

  </footer>
</body>

</html>